/**index.wxss**/
@import "/utils/aliicon.wxss";

.mn{
  color: black;
}
.container{
  padding: 0;
}
.city{
  width: 100%;
  text-align: center;
  margin-top: 20px;
  font-size: 20px;
  position: relative;
}
.city .xiala{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 3rpx;
}
.now_tmp{
  width: 100%;
  text-align: center;
  font-size: 70px;
  position: relative;
}
.now_tmp_du{
  font-size: 35px;
  text-align: center;
  position: absolute;
  top: 11px;
}
.max_min{
  text-align: center;
}
.word{
  text-align: center;
  margin-top: 10px;
}
.update_today{
  width: 94%;
  height: 62rpx;
  margin-top: 80rpx;
  margin-left: 3%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #3399ff;
}
.hourly{
  display: flex;
  width: 1200rpx;
  height: 300rpx;
}
.each_hour{
  width: 150rpx;
  height: 300rpx;
}
.each_hour view{
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.each_hour view image{
  width: 80rpx;
  height: 80rpx;
}
.daily{
  width: 94%;
  margin-left: 3%;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #3399ff;
}
.daily:nth-child(10){
  border-bottom: 1rpx solid #3399ff;
}
.daily image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 6rpx;
}
.life_word{
  margin-top: 20rpx;
  font-weight: bold;
  margin-left: 3%;
  margin-bottom: 20rpx;
}
.lifestyle{
  width: 94%;
  margin-left: 3%;
  margin-bottom: 2%;
  display: flex;
  flex-wrap: wrap;
}
.lifestyle_son{
  width: 24.7%;
  height: 100rpx;
  border: 1rpx solid #3399ff;
}
.type {
  font-size: 25rpx;
  color: gray;
  text-align: center;
  margin-top: 7rpx;
}
.brf{
  font-size: 35rpx;
  font-family: "微软雅黑";
  text-align: center;
  margin-top: 5rpx;
}